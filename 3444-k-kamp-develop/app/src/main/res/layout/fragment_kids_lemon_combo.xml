<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menu_kids_lemon"
    android:background="@drawable/gradient_list"
    tools:context=".fragments.menuKids.KidsLemonComboFragment">


    <ImageView
        android:id="@+id/image_lemon_kids"
        android:layout_width="145dp"
        android:layout_height="143dp"
        android:layout_marginStart="133dp"
        android:layout_marginLeft="133dp"
        android:layout_marginEnd="133dp"
        android:layout_marginRight="133dp"
        android:src="@drawable/lemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_lemon_combo_title"
        android:layout_width="306dp"
        android:layout_height="33dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:text="@string/boneless_lemon_pepper_wing_combo"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_lemon_kids" />

    <TextView
        android:id="@+id/text_lemon_combo_description"
        android:layout_width="358dp"
        android:layout_height="80dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:text="@string/lemon_combo_description"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_lemon_combo_title" />

    <ImageView
        android:id="@+id/image_kids_lemon"
        android:layout_width="228dp"
        android:layout_height="222dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="92dp"
        android:src="@drawable/lemon_pepper_chicken"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_lemon_combo_description" />

    <TextView
        android:id="@+id/text_lemon_kids_calories"
        android:layout_width="249dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="133dp"
        android:text="@string/_400_calories_per_serving"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_kids_lemon" />

    <ImageButton
        android:id="@+id/button_help_image_kids_lemon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/button_refill_image_kids_lemon"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/refill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_lemon_kids_allergens"
        android:layout_width="337dp"
        android:layout_height="26dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="91dp"
        android:text="@string/wheat_milk_warning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_lemon_kids_calories" />

    <TextView
        android:id="@+id/text_lemon_kids_ingredients"
        android:layout_width="337dp"
        android:layout_height="46dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:text="Ingredients include Chicken, Lemon, Black Pepper, Dijon Mustard, Celery and Carrots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_lemon_kids_allergens"
        tools:ignore="HardcodedText"
        />

</androidx.constraintlayout.widget.ConstraintLayout>