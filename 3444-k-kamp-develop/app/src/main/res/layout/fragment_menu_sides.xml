<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_side"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context=".fragments.menuSidesFragments.MenuSidesFragment">

    <TextView
        android:id="@+id/text_sides"
        android:layout_width="382dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/sides"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_icon_select"
        android:layout_width="381dp"
        android:layout_height="27dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:text="@string/select_icon_for_description"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_sides" />

    <ImageButton
        android:id="@+id/button_fries_image"
        android:layout_width="130dp"
        android:layout_height="119dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="45dp"
        android:background="@null"
        android:src="@drawable/fries"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_icon_select" />


    <Button
        android:id="@+id/button_fries"
        android:layout_width="153dp"
        android:layout_height="43dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/black"
        android:text="@string/cajun_fries"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fries_image" />


    <ImageButton
        android:id="@+id/button_corn_image"
        android:layout_width="148dp"
        android:layout_height="129dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:background="@null"
        android:src="@drawable/corn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_icon_select" />

    <Button
        android:id="@+id/button_corn"
        android:layout_width="153dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/black"
        android:text="@string/fried_corn"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_corn_image" />

    <ImageButton
        android:id="@+id/button_veggie_sticks_image"
        android:layout_width="151dp"
        android:layout_height="125dp"
        android:layout_marginTop="67dp"
        android:background="@null"
        android:src="@drawable/v_sticks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fries" />

    <Button
        android:id="@+id/button_veggie_sticks"
        android:layout_width="153dp"
        android:layout_height="43dp"
        android:background="@android:color/black"
        android:text="@string/veggie_sticks"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_veggie_sticks_image" />

    <ImageButton
        android:id="@+id/button_help_image_sides"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/button_refill_image_sides"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/refill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_Fries_Popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Our most popular option!"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/button_fries"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fries_image"
        app:layout_constraintVertical_bias="0.94" />

    <TextView
        android:id="@+id/text_Corn_Popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Our most popular option!"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/button_corn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_corn_image"
        app:layout_constraintVertical_bias="0.97" />

    <TextView
        android:id="@+id/text_Veggie_Popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our most popular option!"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/button_veggie_sticks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_veggie_sticks_image"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
